{
  "compilerOptions": {
    "baseUrl": "src/",
    "paths": {
      "~*": ["./*"]
    },
    "target": "es6", 
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": ["src/**/*"]
}